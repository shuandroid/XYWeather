<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/statusImage"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/statusImage"
        android:layout_alignLeft="@id/statusImage"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/likeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/statusImage"
        android:layout_alignRight="@id/statusImage"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="18"
            android:layout_marginRight="3dp"
            android:textColor="@color/status_like_pink" />

        <ImageView
            android:id="@+id/likeView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/status_ic_player_liked" />
    </LinearLayout>

