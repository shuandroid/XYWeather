<resources>

    <style name="Widget" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="MyPagerTitleStrip">
        <attr name="pts_radius" format="dimension" />
        <attr name="pts_margin" format="dimension" />
        <attr name="pts_background" format="color|integer" />
        <attr name="pts_selected_background" format="color|integer" />
        <attr name="pts_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>


    <!--for  weather text-->

    <style name="section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="today_detail_info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="today_detail_info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="today_detail_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/w_text_primary</item>
        <item name="android:textSize">14dp</item>

    </style>

    <style name="w_section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="suggestion_brf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/w_text_primary</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:layout_marginLeft">112dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="suggestion_title" parent="@style/suggestion_brf">
        <item name="android:layout_marginLeft">56dp</item>
    </style>

    <style name="suggestion_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/w_text_secondary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="suggestion_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_centerVertical">false</item>
    </style>

    <style name="suggestion_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/w_divider_size</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/w_divider_secondary</item>
    </style>

    <!--for  setting text-->
    <style name="setting_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="setting_item_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_arrow_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="Widget.Drawer.Main.Left" parent="Widget">
        <item name="android:layout_width">@dimen/main_right_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/color_drawer_right</item>
    </style>
</resources>
