<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="MyPagerTitleStrip">
        <attr name="pts_radius" format="dimension"/>
        <attr name="pts_margin" format="dimension"/>
        <attr name="pts_background" format="color|integer"/>
        <attr name="pts_selected_background" format="color|integer"/>
        <attr name="pts_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

</resources>
